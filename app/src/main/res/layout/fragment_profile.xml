<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/profile_name"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="15dp"
                android:includeFontPadding="false"
                android:background="@drawable/profile_input_bg"
                android:hint="닉네임"
                android:textColorHint="#777"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/role"
                app:layout_constraintStart_toEndOf="@+id/profile_picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_picture" />

            <EditText
                android:id="@+id/role"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:hint="학생/직업"
                android:textColorHint="#777"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/profile_name"
                android:background="@drawable/profile_input_bg"
                app:layout_constraintBottom_toBottomOf="@+id/profile_picture"
                app:layout_constraintStart_toStartOf="@+id/profile_name"
                app:layout_constraintTop_toBottomOf="@id/profile_name" />

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="56dp"
                android:src="@drawable/ic_face_black_48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/mentor_linear"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_picture">

                <TextView
                    android:id="@+id/mentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="멘토 찾는중"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/mentor_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/mentor_linear">

                <EditText
                    android:id="@+id/mentor_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#888" />

            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:id="@+id/mentee_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="25dp"
                app:layout_constraintTop_toBottomOf="@+id/chip_group_mentor">

                <TextView
                    android:id="@+id/mentee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="멘티 찾는중"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/mentee_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_mentee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/mentee_linear">

                <EditText
                    android:id="@+id/mentee_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#888" />

            </com.google.android.material.chip.ChipGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="저장"
                android:textSize="18sp"
                android:background="@null"
                android:textColor="#0031ba"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅" />
</LinearLayout>
